{{!
    @template block_myoverview/main

    This template renders the main content area for the myoverview block.

    Example context (json):
    {}
}}

<div id="block-myoverview-{{uniqid}}" class="block-myoverview block-cards" data-region="myoverview" role="navigation">
    <hr class="mt-0"/>

    <div data-region="filter" class="d-flex align-items-center my-2" aria-label="{{#str}} aria:controls, block_myoverview {{/str}}">
        {{> block_myoverview/nav-grouping-selector }}

        {{> block_myoverview/nav-search-widget }}

        {{> block_myoverview/nav-sort-selector }}

        {{#displaydropdown}}
            {{> block_myoverview/nav-display-selector }}
        {{/displaydropdown}}
    </div>
    <div class="progress">
        <div class="progress-bar bg-success" data-toggle="tooltip" data-placement="top" title="{{completed_courses_percentage}}% COMPLETATO" role="progressbar" aria-valuenow="{{completed_courses_percentage}}" style="width: {{completed_courses_percentage}}%" aria-valuemin="0" aria-valuemax="{{completed_courses_percentage}}"></div>
        <div class="progress-bar bg-warning" data-toggle="tooltip" data-placement="top" title="{{inprogress_courses_percentage}}% IN CORSO" role="progressbar" aria-valuenow="{{inprogress_courses_percentage}}" style="width: {{inprogress_courses_percentage}}%" aria-valuemin="0" aria-valuemax="{{inprogress_courses_percentage}}"></div>
        <div class="progress-bar bg-secondary" data-toggle="tooltip" data-placement="top" title="{{future_courses_percentage}}% DA INIZIARE" role="progressbar" aria-valuenow="{{future_courses_percentage}}" style="width: {{future_courses_percentage}}%" aria-valuemin="0" aria-valuemax="{{future_courses_percentage}}"></div>
    </div>
    <div class="container-fluid p-0">
        {{> block_myoverview/courses-view }}
    </div>

</div>
{{#js}}
require(
[
    'jquery',
    'block_myoverview/main',
],
function(
    $,
    Main
) {
    var root = $('#block-myoverview-{{uniqid}}');
    Main.init(root);
});
{{/js}}
