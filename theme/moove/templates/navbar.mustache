<header class="it-header-wrapper it-header-sticky" 
data-bs-toggle="sticky" 
data-bs-position-type="fixed" 
data-bs-target="#stickyTrigger1" 
data-bs-sticky-class-name="is-sticky">
  <div class="it-header-slim-wrapper ">
    <div class="container">
      <div class="row">
        <div class="col-12">
          <div class="it-header-slim-wrapper-content">
            <a class="d-none d-lg-block navbar-brand" href="#">Ente appartenenza</a>
            <div class="nav-mobile">
              <nav aria-label="Navigazione secondaria">              
                <div class="link-list-wrapper collapse" id="menuC1">
                  <ul class="link-list">
                  {{#primarymoremenu}}
                      {{#nodecollection}}
                          {{#children}}
                               {{> theme_moove/moremenu_children}}
                          {{/children}}
                      {{/nodecollection}}
                      {{#nodearray}}
                           {{> theme_moove/moremenu_children}}

{{/nodearray}}
<li><a class="dropdown-item list-item" href="#">Help</a></li>
                  {{/primarymoremenu}}

</ul>
                </div>
              </nav>
            </div>
            <div class="it-header-slim-right-zone">
              {{#langmenu}}
                  {{> theme_moove/language_menu }}
                  <div class="divider border-left h-75 align-self-center mx-1"></div>
              {{/langmenu}}
              <div class="d-flex align-items-stretch usermenu-container" data-region="usermenu">
                  {{#usermenu}}
                      {{> core/user_menu }}
                  {{/usermenu}}
              </div>
              <div class="it-access-top-wrapper">
                {{{ output.edit_switch }}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="it-nav-wrapper">
    <div class="it-header-center-wrapper">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="it-header-center-content-wrapper">
              <div class="it-brand-wrapper">
                <a href="{{{ config.homeurl }}}">
                  {{# output.should_display_logo }}
                        <img src="{{output.get_logo}}" class="logo mr-1" alt="{{sitename}}">
                  {{/ output.should_display_logo }}
                  <div class="it-brand-text">
                    <div class="it-brand-title">{{{ sitename }}}</div>
                  </div>
                </a>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="it-header-navbar-wrapper" id="stickyTrigger1" data-bs-toggle="sticky">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <!--start nav-->
            <nav class="navbar navbar-expand-lg has-megamenu" aria-label="Navigazione principale">
              <div class="navbar-collapsable" id="navC1" style="display: none;">
                  {{#secondarymoremenu}}
                      {{> theme_moove/moremenu}}
                  {{/secondarymoremenu}}
                </div>
              </div>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
